<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Brain4itTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/Brain4itTheme.ActionBar</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:homeAsUpIndicator">@drawable/home</item>
    <item name="android:actionOverflowButtonStyle">@style/Brain4itTheme.OverFlow</item>
  </style>

  <style name="Brain4itTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
    <item name="android:background">#0790D0</item>
    <item name="android:displayOptions">showTitle</item>
    <item name="android:titleTextStyle">@style/Brain4itTheme.ActionBar.TitleTextStyle</item>
  </style>  

  <style name="Brain4itTheme.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    <item name="android:src">@drawable/item_options</item>
  </style>

  <style name="Brain4itTheme.ActionBar.TitleTextStyle" 
         parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textStyle">bold</item>
  </style>  
</resources>